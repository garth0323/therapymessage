<%= render 'navigation' %>

<div class="container">
  <div class="content-container clearfix">
    <h1 class="content-title">Compose</h1>
    <div class="col-md-12">
      <%= form_for @message do |f| %>
        <div class="form-group">
          <%= f.text_field :receiver_id, class: "form-control", value: @receiver %>  
        </div>
        <div class="form-group">
          <%= f.text_field :subject, class: "form-control", placeholder: "Subject" %>
        </div>
          <%= f.text_area :body, class: "form-control", placeholder: "Message", id: "Steve"%>
          <%= f.hidden_field :sender_id, value: current_user.id %>
        <div class="btn-send">
          <%= f.submit :Send, class: "btn btn-danger btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

