<%= render 'navigation' %>


<div class="container">
  <div class="content-container clearfix">
    <div class="col-md-12">
      <h1 class="content-title">Message</h1>
        <form class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label">Sender</label>
            <div class="col-sm-10">
              <p class="form-control-static"><%= first_and_last(@message.sender_id) %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Recepient</label>
            <div class="col-sm-10">
              <p class="form-control-static"><%= first_and_last(@message.receiver_id) %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Subject</label>
            <div class="col-sm-10">
              <p class="form-control-static"><%= @message.subject %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Message</label>
            <div class="col-sm-10">
              <p class="form-control-static"><%= @message.body %></p>
            </div>
          </div>
        </form>             
    </div>
  </div>
</div>